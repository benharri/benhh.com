{% extends "layout.html" %}

{% block title %}Blog Home | Benjamin Harris{% endblock %}

{% block header %}
  {{ parent() }}
  <link rel="stylesheet" href="/css/sticky-footer-navbar.css">
{% endblock %}

{% block content %}
<div class="container">

        <div class="row">

            {# <!-- Blog Entries Column --> #}
            <div class="col-md-8">
                <br>
                <h1>
                    My Blog
                    <small>by Ben Harris</small>
                </h1>

                <hr>

                {% if alert is defined %}
                    <div class="alert alert-danger" role="alert">{{ alert }}</div>
                {% endif %}

                {% for slug, post in posts %}
                    {# <!-- First Blog Post --> #}
                    {% if post.published is not defined or post.published %}
                        <h2>
                            <a href="{{ slug }}">{{ post.title }}</a>
                        </h2>
                        <p class="lead">
                            by <a href="{{ post.author_url ?? path('homepage')~"#about" }}">{{ post.author ?? "Ben Harris" }}</a>
                        </p>
                        <p><span class="fa fa-clock-o"></span> Posted on {{ post.publish_date|date("l, F jS Y") }}</p>
                        <hr>
                        {% if post.image is defined %}
                            <img class="img-fluid" src="{{ post.image.src }}" alt="{{ post.image.alt ?? "" }}">
                            <hr>
                        {% endif %}
                        <p>{{ post.teaser|raw }}</p>
                        <a class="btn btn-primary" href="{{ slug }}">Read More <span class="fa fa-chevron-right"></span></a>

                        <hr>
                    {% endif %}
                {% endfor %}

                {# <!-- Pager --> #}
                <ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Older</a>
                    </li>
                    <li class="next">
                        <a href="#">Newer &rarr;</a>
                    </li>
                </ul>

            </div>

            {{ include('blog/sidebar.html') }}

        </div>
        {# <!-- /.row --> #}
</div>

{% endblock %}

{% block footer %}
    {{ parent() }}
    <script>
    jQuery(document).ready(function($){
        $(".nav>li#blog").addClass("active");
    });
    </script>
{% endblock %}

