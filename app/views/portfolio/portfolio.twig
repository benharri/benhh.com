{% extends "layout.html" %}

{% block title %}Portfolio | Ben Harris{% endblock %}

{% block header %}
  {{ parent() }}
  <link rel="stylesheet" href="/css/sticky-footer-navbar.css">
{% endblock %}

{% block content %}

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <br>
      <h1>Portfolio</h1>
      <hr>
    </div>
    <div class="col-xs-12">
      <div class="alert alert-danger" role="alert">This page is still under construction</div>
    </div>
    <div class="col-xs-12">
      <p>Here's some work that I'm proud of</p>
    </div>
    <div class="col-xs-12">
      <a href="{{ path("patternbook") }}" class="btn btn-danger" role="button"><img src="/img/favicon-16x16.png"> My CS326 Patternbook</a>
