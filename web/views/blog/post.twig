{% extends "layout.html" %}

{% block title %}{{ post.title }} | Blog | Ben Harris{% endblock %}

{% block header %}
  {{ parent() }}
  <link rel="stylesheet" href="/static/css/sticky-footer-navbar.css">
{% endblock %}

{% block content %}

    <div class="container">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                <h1>{{ post.title }}</h1>

                <!-- Author -->
                <p class="lead">
                    by <a href="{{ url('homepage') }}#about">{{ post.author }}</a>
                </p>

                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Posted on {{ post.publish_date }}</p>

                <hr>

                <!-- Preview Image -->
                <img class="img-responsive" src="http://placehold.it/900x300" alt="">

                <hr>

                <!-- Post Content -->
                <p class="lead">{{ post.content }}</p>

                <hr>



            </div>

            {{ include('blog/sidebar.html') }}

        </div>
        <!-- /.row -->



    </div>

{% endblock %}
